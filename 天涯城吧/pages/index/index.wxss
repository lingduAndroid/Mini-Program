/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  display: flex;
  flex-direction:column;  
  align-items: center;
}
.contain{
  height: 100vh; 
  display: flex;         /*启动flex布局*/
  flex-direction:column;   /*纵向布局*/
  justify-content: space-around ; /*水平方向伸缩性的居中*/
  align-items: center;   /*垂直方向居中*/
}

.circle{
    width: 350rpx;
    height: 350rpx;
    border: 0 solid #ffffff;
    border-radius: 500px;
    box-shadow: 4px 1px 1px #cccccc;
}